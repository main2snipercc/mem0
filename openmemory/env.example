# OpenMemory 环境配置示例
# 复制此文件为 .env 并填入实际值

# 用户ID - 用于标识记忆的所有者
USER_ID=default_user

# 硅基流动API密钥 - 必需，用于LLM功能
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# OpenAI API密钥 - 可选，如果未设置硅基流动密钥则使用
OPENAI_API_KEY=your_openai_api_key_here

# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite:///./data/openmemory.db

# PostgreSQL (可选，用于生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/openmemory

# Qdrant配置
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# API服务配置
API_HOST=0.0.0.0
API_PORT=8765
API_WORKERS=4

# UI服务配置
NEXT_PUBLIC_API_URL=http://localhost:8765
NEXT_PUBLIC_USER_ID=default_user

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 性能配置
MAX_MEMORIES_PER_USER=10000
MEMORY_CLEANUP_INTERVAL=86400

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
